{
  "name": "origin-back",
  "version": "1.0.0",
  "description": "Origin backend",
  "main": "index.js",
  "scripts": {
    "start": "run-p -l type-check:watch start:dev start:local-db",
    "start:dev": "nodemon --exec cross-env API_MOCK=false babel-node --extensions \".ts\" src/index.ts",
    "start:debug": "run-p -l type-check:watch \"start:app-debug -- --inspect-brk\" start:local-db",
    "start:app-debug": "nodemon --exec babel-node --extensions \".ts\" src/index.ts",
    "start:prod": "node ./dist/index.js",
    "start:mock": "run-p -l type-check:watch start:api-mock",
    "start:api-mock": "nodemon --exec cross-env API_MOCK=true babel-node --extensions \".ts\" src/index.ts",
    "start:local-db": "docker-compose up || echo \"Run docker-compose up manually\"",
    "stop:local-db": "docker-compose down || echo \"Run docker-compose down manually\"",
    "start:test-runners": "babel-node --extensions \".ts\" src/test-runners/index.ts --inspect-brk",
    "build": "run-p -l type-check build:prod",
    "build:dev": "npm run build:prod -- --source-maps",
    "build:prod": "npm run clean && babel src -d dist --ignore=\"./src/test-runners\" --extensions \".ts\"",
    "build:all": "npm run build && npm run build:front",
    "build:front": "sh ./build-front.sh",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "clean": "rimraf dist",
    "test": "cross-env NODE_ENV=test jest -c ./config/test/jest.js --verbose",
    "test:watch": "npm run test -- --watchAll -i --no-cache"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Lemoncode/origin-back.git"
  },
  "author": "Lemoncode",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Lemoncode/origin-back/issues"
  },
  "homepage": "https://github.com/Lemoncode/origin-back#readme",
  "dependencies": {
    "apollo-server-express": "^2.15.0",
    "apollo-server-plugin-base": "0.9.0",
    "cookie-parser": "^1.4.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "graphql": "^15.1.0",
    "jsonwebtoken": "^8.5.1",
    "lodash.merge": "^4.6.2",
    "mongoose": "^5.9.19",
    "regenerator-runtime": "^0.13.5",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.1",
    "@babel/core": "^7.10.2",
    "@babel/node": "^7.10.1",
    "@babel/plugin-proposal-optional-chaining": "^7.10.1",
    "@babel/preset-env": "^7.10.2",
    "@babel/preset-typescript": "^7.10.1",
    "@types/express": "^4.17.6",
    "@types/inquirer": "^6.5.0",
    "@types/jest": "^26.0.0",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mongoose": "^5.7.27",
    "babel-plugin-module-resolver": "^4.0.0",
    "cross-env": "^7.0.2",
    "inquirer": "^7.2.0",
    "jest": "^26.0.1",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.1.0",
    "typescript": "^3.9.5"
  }
}
